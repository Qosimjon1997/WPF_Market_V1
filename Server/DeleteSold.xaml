<Window x:Class="Server.DeleteSold"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Title="Market Account-Проверка" Height="200" Width="350">
    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" TextAlignment="Center" Text="Действительно вы хотите &#xa;удалить этот элемент?" FontSize="22"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" FontSize="22" Margin="0,0,15,0" x:Name="btnNo" Click="btnNo_Click" Content="Нет"/>
                <Button Grid.Column="1" FontSize="22" Margin="15,0,0,0" x:Name="btnYes" Click="btnYes_Click" Content="Да"/>
            </Grid>
        </Grid>
    </Border>
</Window>
